extends layout/layout

block content
  h1=title

  if orders.length
    each order in orders
      .row
        .col.s6.offset-s3
          .card
            .card-content
              span.card-title Заказ
                =' '
                small=order._id

              p.date=order.date

              p
                em=order.user.userId.name
                =' '
                | (
                =order.user.userId.email
                | )

              ol
                each course in order.courses
                  li=course.course.title
                    =' '
                    | (x
                    strong=course.count
                    | )

              hr

              p Цена:
                =' '
                span.price=order.price

  else
    p Заказов пока нет
